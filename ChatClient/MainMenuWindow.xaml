<Window x:Class="ChatClient.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainMenuWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="usernamelabel" Content="Username" HorizontalAlignment="Left" Margin="678,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <ListBox Name ="roomList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,661,25" SelectionChanged="roomList_SelectionChanged"/>
        
        <TextBox x:Name="chatroombox" HorizontalAlignment="Left" Margin="666,50,0,0" TextWrapping="Wrap" Text="Chat Room Name" VerticalAlignment="Top" Width="120" TextChanged="chatroombox_TextChanged"/>
        <Button Content="Create" HorizontalAlignment="Left" Margin="689,89,0,0" VerticalAlignment="Top" Height="32" Width="75" Click="createButton_Click"/>
        <RichTextBox x:Name="msgdisplaybox" Margin="165,10,178,83">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="logoutbutton" Content="Log Out" HorizontalAlignment="Left" Margin="701,389,0,0" VerticalAlignment="Top" Height="40" Width="89" Click="logoutbutton_Click"/>
        <TextBox x:Name="msgtxtbox" HorizontalAlignment="Left" Margin="165,389,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="365" Height="40"/>
        <Button x:Name="sendmsgbtn" Content="Send" HorizontalAlignment="Left" Margin="535,389,0,0" VerticalAlignment="Top" Height="40" Width="81" Click="sendmsgbtn_Click"/>
        <ListBox x:Name="participantlist" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="670,164,18,100"/>
        <Label Content="Participants" HorizontalAlignment="Left" Margin="666,135,0,0" VerticalAlignment="Top"/>
        <Button Content="Upload File" HorizontalAlignment="Left" Margin="535,356,0,0" VerticalAlignment="Top" Height="28" Width="81" />

    </Grid>
</Window>
